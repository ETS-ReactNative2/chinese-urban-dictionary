<html>
<head>
	<title>Add New Entry</title>
	<link href="https://fonts.googleapis.com/css?family=Oswald|Noto+Sans+TC&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="new_entry_form.css">
	<script type="text/javascript"></script>
</head>
<body>
	<div class="mainPanel">
		<h1>CHANG'S SLANG</h1>
		<h2>New Entry</h2>
		<%= form_for(@entry) do |f| %>
			<ul>
			<% @entry.errors.full_messages.each do |error| %>
			<li><%= error %></li>
			<% end %>
			</ul>
			<div class="inputFields">
				<p>
					<span>
						<%= f.label :phrase %>
					</span>
					<span>
						<%= f.text_field :phrase %>
					</span>
				</p>
				<p>
					<span>
						<%= f.label :pinyin %>
					</span>
					<span>
						<%= f.text_field :pinyin %>
					</span>
				</p>
				<p>
					<span class="submitButton">
						<%= f.submit %>					
					</span>	
				</p>
		  	
			</div>
		<% end %>
	</div>
</body>
</html>
